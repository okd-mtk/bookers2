<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-o mx-auto">
      <%= form_with model: @book, method: :patch do |f| %>
        <h1>Editing Book</h1>

        <%= f.label :Title %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :Opinion %>
        <%= f.text_area :body, class: "form-control" %>

        <%= f.submit 'Update Book' ,class: "btn btn-success" %>
        <% end %>


        <%= link_to 'Show',book_path(@book.id) %>
        |
        <%= link_to 'Back',books_path %>
      </div>
    </div>
  </div>
</main>